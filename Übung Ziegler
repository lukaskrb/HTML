        h1 {
            margin-top: 10px; /* Abstand oben */
            margin-bottom: 20px; /* Abstand unten */
            text-align: center; /* Zentriert den Text */
        }

        /* Styling für kleinere Überschriften (h2, h3, h4) */
        h2, h3, h4 {
            margin-top: 12px; /* Abstand oben */
            margin-bottom: 5px; /* Abstand unten */
        }

        /* Styling für die Liste (ul) */
        ul {
            margin: 5px 0px; /* Abstand oben und unten */
            padding-left: 25px; /* Linker Innenabstand für die Listenelemente */
            font-size: 15px; /* Schriftgröße */
        }

        /* Styling für die Karte (card) */
        .card {
            display: flex; /* Flexbox-Layout */
            justify-content: center; /* Zentriert die Karte horizontal */
        }

        /* Styling für das innere Div-Element innerhalb der Karte */
        .card div {
            width: 200px; /* Initiale Breite des Divs */
            background: rebeccapurple; /* Hintergrundfarbe für das Div */
            border-radius: 10px; /* Abgerundete Ecken */
            margin-top: 40px; /* Abstand oben */
            padding: 20px; /* Innenabstand */
            width: 500px; /* Feste Breite des Divs (überschreibt die vorherige Breite) */
            border: 4px solid; /* Roter Rand um das Div */
            border-color: red; /* Randfarbe (rot) */
        }

        /* Styling für Absätze (p) */
        p {
            margin: 5px 0px; /* Abstand oben und unten */
            font-size: 15px; /* Schriftgröße */
        }
    </style>
</head>
